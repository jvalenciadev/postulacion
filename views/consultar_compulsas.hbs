<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta de Postulación - Compulsa</title>

    <!-- Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap"
        rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --bg-body: #0f172a;
            --surface-card: #1e293b;
            --primary: #8b5cf6;
            --accent: #d946ef;
            --text-main: #f8fafc;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --success: #10b981;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: #050a18;
            background-image: linear-gradient(rgba(15, 23, 42, 0.7), rgba(15, 23, 42, 0.7)), url('/consultar_bg.jpeg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            overflow-x: hidden;
            animation: bgZoom 30s infinite alternate ease-in-out;
        }

        @keyframes bgZoom {
            from {
                transform: scale(1);
            }

            to {
                transform: scale(1.05);
            }
        }

        .consultar-card {
            width: 100%;
            max-width: 500px;
            background: rgba(30, 41, 59, 0.5);
            backdrop-filter: blur(25px);
            -webkit-backdrop-filter: blur(25px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 30px;
            padding: 40px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.6);
            animation: cardFloat 8s infinite ease-in-out;
            position: relative;
            z-index: 10;
        }

        @keyframes cardFloat {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-img {
            max-width: 320px;
            width: 100%;
            height: auto;
            margin: 0 auto;
            border-radius: 12px;
            filter: drop-shadow(0 0 15px rgba(139, 92, 246, 0.4));
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            padding: 10px;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(5px);
        }

        .logo-container {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            overflow: hidden;
            border-radius: 20px;
            margin-bottom: 25px;
        }

        .title {
            font-size: 1.5rem;
            margin-bottom: 5px;
        }

        .subtitle {
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

        .search-box {
            position: relative;
            margin-bottom: 15px;
        }

        .search-input {
            width: 100%;
            background: rgba(15, 23, 42, 0.6);
            border: 2px solid var(--border-color);
            border-radius: 16px;
            padding: 16px 20px;
            padding-left: 50px;
            color: white;
            font-size: 1rem;
            transition: all 0.3s;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.2);
            background: rgba(15, 23, 42, 0.8);
        }

        .search-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

        .btn-search {
            width: 100%;
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            color: white;
            border: none;
            border-radius: 16px;
            padding: 16px;
            font-size: 1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-transform: uppercase;
        }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(139, 92, 246, 0.4);
        }

        .btn-search:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

        .result-container {
            margin-top: 30px;
            display: none;
        }

        .result-container.active {
            display: block;
            animation: slideUp 0.4s ease-out;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .status-badge {
            display: inline-block;
            background: rgba(16, 185, 129, 0.2);
            color: var(--success);
            padding: 6px 16px;
            border-radius: 100px;
            font-weight: 700;
            font-size: 0.8rem;
            margin-bottom: 20px;
            text-transform: uppercase;
        }

        .result-grid {
            display: grid;
            gap: 12px;
        }

        .info-item {
            background: rgba(255, 255, 255, 0.03);
            padding: 12px 16px;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .info-label {
            font-size: 0.7rem;
            color: var(--text-secondary);
            text-transform: uppercase;
            font-weight: 600;
            margin-bottom: 2px;
        }

        .info-value {
            font-size: 0.95rem;
            font-weight: 500;
            color: var(--text-main);
        }

        .loader {
            display: none;
            width: 22px;
            height: 22px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .error-msg {
            color: #ef4444;
            text-align: center;
            margin-top: 15px;
            font-size: 0.9rem;
            display: none;
        }

        .highlight-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-bottom: 20px;
            background: rgba(139, 92, 246, 0.1);
            padding: 20px;
            border-radius: 20px;
            border: 1px solid rgba(139, 92, 246, 0.2);
        }

        .highlight-item {
            text-align: center;
        }

        .highlight-label {
            font-size: 0.8rem;
            color: var(--text-secondary);
            text-transform: uppercase;
            font-weight: 700;
            margin-bottom: 5px;
            letter-spacing: 0.5px;
        }

        .highlight-value {
            font-size: 1.6rem;
            font-weight: 800;
            color: var(--text-main);
            font-family: 'Outfit', sans-serif;
            text-shadow: 0 0 10px rgba(139, 92, 246, 0.3);
        }

        .searching-logo {
            animation: logoPulse 1.5s infinite ease-in-out;
        }

        @keyframes logoPulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }
    </style>
</head>

<body>
    <div class="consultar-card">
        <div class="header">
            <div class="logo-container">
                <img src="/logo_minedu.png" alt="Logo" class="logo-img" id="mainLogo">
            </div>
            <h1 class="title" id="mainTitle">Reportes Académicos</h1>
            <p class="subtitle" id="mainSubtitle">Sistema de gestión de Compulsas</p>
        </div>

        <form id="searchForm">
            <div
                style="margin-bottom: 15px; font-size: 0.8rem; color: var(--text-secondary); background: rgba(255,255,255,0.05); padding: 12px; border-radius: 12px; border-left: 4px solid var(--primary);">
                <i class="fa-solid fa-circle-info" style="margin-right: 5px;"></i>
                Para búsqueda por nombre, ingresa: **Paterno Materno Nombre** (el orden es obligatorio).
            </div>

            <div class="search-box">
                <i class="fa-solid fa-id-card search-icon"></i>
                <input type="text" id="ciInput" class="search-input" placeholder="Buscar por C.I.">
            </div>

            <div
                style="text-align: center; margin: 10px 0; font-weight: 700; color: var(--text-secondary); font-size: 0.7rem; letter-spacing: 1px;">
                O BUSCAR POR NOMBRE COMPLETO</div>

            <div class="search-box">
                <i class="fa-solid fa-user search-icon"></i>
                <input type="text" id="nameInput" class="search-input" placeholder="Paterno Materno Nombre">
            </div>

            <button type="submit" class="btn-search" id="submitBtn">
                <span id="btnText">Consultar Compulsa</span>
                <div class="loader" id="btnLoader"></div>
            </button>
        </form>

        <div id="errorMsg" class="error-msg"></div>

        <div class="result-container" id="resultContainer">
            <div style="text-align: center;">
                <div class="status-badge">HABILITADO</div>
            </div>

            <!-- Prominent Highlights -->
            <div class="highlight-grid">
                <div class="highlight-item">
                    <div class="highlight-label">AULA</div>
                    <div class="highlight-value" style="color: #fbbf24;" id="resAula"></div>
                </div>
                <div class="highlight-item">
                    <div class="highlight-label">EQUIPO</div>
                    <div class="highlight-value" id="resEq"></div>
                </div>
                <div class="highlight-item">
                    <div class="highlight-label">FECHA</div>
                    <div class="highlight-value" id="resFecha"></div>
                </div>
                <div class="highlight-item">
                    <div class="highlight-label">TURNO</div>
                    <div class="highlight-value" style="color: var(--accent);" id="resTurno"></div>
                </div>
            </div>

            <div class="result-grid">
                <div class="info-item">
                    <div class="info-label">Postulante</div>
                    <div class="info-value" id="resNombre" style="color: var(--primary); font-weight: 700;"></div>
                </div>
                <div class="info-item">
                    <div class="info-label">C.I.</div>
                    <div class="info-value" id="resCI"></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Tipo Postulación</div>
                    <div class="info-value" id="resTipo"
                        style="color: var(--accent); font-weight: 700; text-transform: uppercase;"></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Cargo</div>
                    <div class="info-value" id="resCargo"></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Departamento</div>
                    <div class="info-value" id="resDep"></div>
                </div>
                <div class="info-item">
                    <div class="info-label">ESFM / UA</div>
                    <div class="info-value" id="resEsfm"></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Municipio</div>
                    <div class="info-value" id="resMun"></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Recinto</div>
                    <div class="info-value" id="resRecinto"></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Dirección</div>
                    <div class="info-value" id="resDir"></div>
                </div>
            </div>

        </div>
    </div>

    <script>
        let currentCi = '';
        const searchForm = document.getElementById('searchForm');
        const submitBtn = document.getElementById('submitBtn');
        const btnText = document.getElementById('btnText');
        const loader = document.getElementById('btnLoader');
        const resultBox = document.getElementById('resultContainer');
        const errorBox = document.getElementById('errorMsg');
        const mainTitle = document.getElementById('mainTitle');
        const mainSubtitle = document.getElementById('mainSubtitle');
        const mainLogo = document.getElementById('mainLogo');

        searchForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const ci = document.getElementById('ciInput').value.trim();
            const name = document.getElementById('nameInput').value.trim();
            const query = ci || name;

            if (!query) {
                alert('Por favor ingresa un C.I. o un Nombre');
                return;
            }

            errorBox.style.display = 'none';
            resultBox.classList.remove('active');
            submitBtn.disabled = true;
            btnText.style.display = 'none';
            loader.style.display = 'block';
            mainLogo.classList.add('searching-logo');
            mainTitle.textContent = 'Buscando...';

            try {
                const response = await fetch('/verificar-compulsas', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'x-api-key': '3fb1cGsvXeiuZFamH57M0or63vJEv7zsPanFBjhO'
                    },
                    body: JSON.stringify({ ci, name })
                });

                const data = await response.json();
                if (!response.ok) throw new Error(data.message || 'No encontrado');

                currentCi = data.ci;
                document.getElementById('resNombre').textContent = data.nombre_completo || '-';
                document.getElementById('resCI').textContent = data.ci || '-';
                document.getElementById('resCargo').textContent = data.cargo || '-';
                document.getElementById('resTipo').textContent = data.tipo_postulacion || 'COMPULSA';
                document.getElementById('resDep').textContent = data.departamento || '-';
                document.getElementById('resEsfm').textContent = data.esfm || '-';
                document.getElementById('resMun').textContent = data.municipio || '-';
                document.getElementById('resRecinto').textContent = data.recinto || '-';
                document.getElementById('resDir').textContent = data.direccion_recinto || '-';
                document.getElementById('resAula').textContent = data.aula || '-';
                document.getElementById('resTurno').textContent = data.turno || '-';
                document.getElementById('resEq').textContent = data.equipo || '-';

                if (data.fecha) {
                    const date = new Date(data.fecha);
                    document.getElementById('resFecha').textContent = isNaN(date) ? data.fecha : date.toLocaleDateString('es-ES');
                } else { document.getElementById('resFecha').textContent = '-'; }

                mainTitle.textContent = '¡Encontrado!';
                mainSubtitle.textContent = 'Datos verificados correctamente';
                resultBox.classList.add('active');

            } catch (err) {
                mainTitle.textContent = 'No Encontrado';
                errorBox.textContent = err.message;
                errorBox.style.display = 'block';
            } finally {
                submitBtn.disabled = false;
                btnText.style.display = 'block';
                loader.style.display = 'none';
                mainLogo.classList.remove('searching-logo');
            }
        });

    </script>
</body>

</html>