<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estadísticas Detalladas - Gestión Académica</title>

    <!-- Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap"
        rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            --bg-body: #0f172a;
            --surface-card: #1e293b;
            --primary: #6366f1;
            --accent: #8b5cf6;
            --text-main: #f8fafc;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --success: #10b981;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-body);
            background-image:
                radial-gradient(circle at 0% 0%, rgba(99, 102, 241, 0.1) 0%, transparent 40%),
                radial-gradient(circle at 100% 100%, rgba(139, 92, 246, 0.1) 0%, transparent 40%);
            color: var(--text-main);
            min-height: 100vh;
            padding: 40px 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

        .title-group h1 {
            font-family: 'Outfit', sans-serif;
            font-size: 2.2rem;
            background: linear-gradient(135deg, #fff 0%, #a5b4fc 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-back {
            background: rgba(255, 255, 255, 0.05);
            color: var(--text-main);
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
        }

        .btn-back:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(-5px);
        }

        .stats-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: rgba(30, 41, 59, 0.4);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 24px;
            padding: 30px;
        }

        .stat-card h3 {
            font-size: 0.9rem;
            text-transform: uppercase;
            color: var(--text-secondary);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .chart-container {
            position: relative;
            height: 300px;
            width: 100%;
        }

        .data-table-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
        }

        @media (max-width: 1024px) {
            .data-table-section {
                grid-template-columns: 1fr;
            }
        }

        .table-card {
            background: rgba(30, 41, 59, 0.4);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 24px;
            padding: 30px;
            overflow: hidden;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-inner {
            background: rgba(15, 23, 42, 0.6);
            border: 1px solid var(--border-color);
            border-radius: 10px;
            padding: 8px 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .search-inner input {
            background: transparent;
            border: none;
            color: white;
            outline: none;
            font-size: 0.9rem;
        }

        .scroll-area {
            max-height: 500px;
            overflow-y: auto;
            border-radius: 12px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            position: sticky;
            top: 0;
            background: #0f172a;
            color: var(--text-secondary);
            font-size: 0.75rem;
            text-transform: uppercase;
            padding: 15px;
            text-align: left;
            z-index: 10;
        }

        td {
            padding: 12px 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            font-size: 0.9rem;
        }

        .count-badge {
            background: rgba(99, 102, 241, 0.2);
            color: var(--primary);
            padding: 4px 10px;
            border-radius: 6px;
            font-weight: 700;
            font-size: 0.85rem;
        }

        /* Custom Scrollbar */
        .scroll-area::-webkit-scrollbar {
            width: 6px;
        }

        .scroll-area::-webkit-scrollbar-track {
            background: transparent;
        }

        .scroll-area::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: 10px;
        }

        .total-banner {
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            padding: 40px;
            border-radius: 24px;
            margin-bottom: 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 20px 40px rgba(99, 102, 241, 0.3);
        }

        .total-info h2 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 5px;
        }
    </style>
</head>

<body>

    <div class="container">
        <header>
            <div class="title-group">
                <h1>Dashboard Estadístico</h1>
                <p style="color: var(--text-secondary);">Análisis detallado de postulaciones nacional</p>
            </div>
            <a href="/" class="btn-back">
                <i class="fa-solid fa-arrow-left"></i>
                Volver a Reportes
            </a>
        </header>

        <div class="total-banner">
            <div class="total-info">
                <p style="text-transform: uppercase; letter-spacing: 2px; opacity: 0.8; font-weight: 600;">Total
                    Nacional de Postulantes</p>
                <h2 id="totalDisplay">0</h2>
                <div style="display: flex; gap: 20px; font-size: 0.9rem; opacity: 0.9;">
                    <span><i class="fa-solid fa-check-double"></i> 100% Habilitados</span>
                    <span><i class="fa-solid fa-calendar"></i> Admisión 2026</span>
                </div>
            </div>
            <div style="font-size: 5rem; opacity: 0.2;">
                <i class="fa-solid fa-chart-line"></i>
            </div>
        </div>

        <div class="stats-summary">
            <div class="stat-card">
                <h3><i class="fa-solid fa-earth-americas" style="color: #818cf8;"></i> Distribución Regional</h3>
                <div class="chart-container">
                    <canvas id="deptChart"></canvas>
                </div>
            </div>
            <div class="stat-card">
                <h3><i class="fa-solid fa-graduation-cap" style="color: #34d399;"></i> Top ESFM por Postulantes</h3>
                <div class="chart-container">
                    <canvas id="esfmChart"></canvas>
                </div>
            </div>
        </div>

        <div class="data-table-section">
            <!-- Recintos Table -->
            <div class="table-card">
                <div class="table-header">
                    <h3 style="font-family: 'Outfit';">Desglose por Recinto</h3>
                    <div class="search-inner">
                        <i class="fa-solid fa-search"></i>
                        <input type="text" id="recintoSearch" placeholder="Buscar recinto..."
                            onkeyup="filterTable('recintoTable', 0)">
                    </div>
                </div>
                <div class="scroll-area">
                    <table id="recintoTable">
                        <thead>
                            <tr>
                                <th>Nombre del Recinto</th>
                                <th style="text-align: right;">Postulantes</th>
                            </tr>
                        </thead>
                        <tbody id="recintoBody"></tbody>
                    </table>
                </div>
            </div>

            <!-- ESFM Table -->
            <div class="table-card">
                <div class="table-header">
                    <h3 style="font-family: 'Outfit';">Listado Completo ESFM/UA</h3>
                    <div class="search-inner">
                        <i class="fa-solid fa-search"></i>
                        <input type="text" id="esfmSearch" placeholder="Buscar institución..."
                            onkeyup="filterTable('esfmTable', 0)">
                    </div>
                </div>
                <div class="scroll-area">
                    <table id="esfmTable">
                        <thead>
                            <tr>
                                <th>Institución</th>
                                <th style="text-align: right;">Postulantes</th>
                            </tr>
                        </thead>
                        <tbody id="esfmBody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function loadDetailedStats() {
            try {
                const res = await fetch('/reports/api/stats');
                const data = await res.json();

                document.getElementById('totalDisplay').textContent = data.total.toLocaleString();

                // 1. Dept Chart (Doughnut)
                new Chart(document.getElementById('deptChart'), {
                    type: 'doughnut',
                    data: {
                        labels: data.byDept.map(d => d.label),
                        datasets: [{
                            data: data.byDept.map(d => d.count),
                            backgroundColor: [
                                '#6366f1', '#8b5cf6', '#ec4899', '#f43f5e',
                                '#f59e0b', '#10b981', '#06b6d4', '#3b82f6', '#64748b'
                            ],
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'right',
                                labels: { color: '#94a3b8', font: { size: 11 } }
                            }
                        }
                    }
                });

                // 2. ESFM Chart (Bar)
                // Usamos solo los top 10 para el gráfico visual rápido
                const topEsfm = data.byEsfm.slice(0, 10);
                new Chart(document.getElementById('esfmChart'), {
                    type: 'bar',
                    data: {
                        labels: topEsfm.map(e => e.label),
                        datasets: [{
                            label: 'Postulantes',
                            data: topEsfm.map(e => e.count),
                            backgroundColor: '#6366f1',
                            borderRadius: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        indexAxis: 'y',
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            x: { grid: { display: false }, ticks: { color: '#94a3b8' } },
                            y: { grid: { display: false }, ticks: { color: '#94a3b8', font: { size: 10 } } }
                        }
                    }
                });

                // 3. Populate Tables
                const recintoBody = document.getElementById('recintoBody');
                data.byRecinto.forEach(item => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${item.label}</td>
                        <td style="text-align: right;"><span class="count-badge">${item.count}</span></td>
                    `;
                    recintoBody.appendChild(tr);
                });

                const esfmBody = document.getElementById('esfmBody');
                data.byEsfm.forEach(item => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${item.label}</td>
                        <td style="text-align: right;"><span class="count-badge">${item.count}</span></td>
                    `;
                    esfmBody.appendChild(tr);
                });

            } catch (err) {
                console.error('Error loading detailed stats:', err);
            }
        }

        function filterTable(tableId, colIndex) {
            const input = document.getElementById(tableId === 'recintoTable' ? 'recintoSearch' : 'esfmSearch');
            const filter = input.value.toUpperCase();
            const table = document.getElementById(tableId);
            const tr = table.getElementsByTagName("tr");

            for (let i = 1; i < tr.length; i++) {
                const td = tr[i].getElementsByTagName("td")[colIndex];
                if (td) {
                    const txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }

        loadDetailedStats();
    </script>
</body>

</html>